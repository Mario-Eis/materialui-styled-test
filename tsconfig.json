{
  "compilerOptions": {
    "outDir": "out/dist",
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "lib": ["es6", "dom"],
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noErrorTruncation": true,
    "strictNullChecks": true
  },
  "exclude": [
    "node_modules",
    "build"
  ]
}